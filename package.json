{
  "name": "delta-ui-react",
  "version": "2.0.6",
  "description": "一个基于React的UI组件库",
  "======= cjs入口 ========": "",
  "main": "lib/index.js",
  "======= esm入口 ========": "",
  "module": "esm/index.js",
  "======= 定义类型入口 ========": "",
  "types": "lib/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "======= 开发环境在文档站点中调试组件 =======": "",
    "dev": "dumi dev",
    "======= 构建站点 部署到github page =======": "",
    "clean": "rimraf lib esm dist",
    "build": "npm run clean && npm run build:types && gulp",
    "build:site": "rimraf doc-site && dumi build",
    "build:types": "rimraf lib && rimraf esm && tsc -p tsconfig.build.json && cpr lib esm",
    "preview:site": "cross-env SITE_BUILD_ENV=PREVIEW npm run build:site && serve doc-site",
    "deploy:site": "npm run build:site && gh-pages -d doc-site",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest --updateSnapshot",
    "release": "ts-node ./scripts/release.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "component-library",
    "react-components",
    "delta-ui"
  ],
  "author": "Delta",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delta1035/delta-ui-react.git"
  },
  "bugs": {
    "url": "https://github.com/delta1035/delta-ui-react/issues"
  },
  "homepage": "https://delta1035.github.io/delta-ui-react",
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "esm",
    "lib",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./es": "./esm/index.js",
    "./lib": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "========= 配合ES module达到tree shaking效果（将样式依赖文件标注为side effects，避免被误删除） =========": "",
  "sideEffects": [
    "dist/*",
    "esm/**/style/*",
    "lib/**/style/*",
    "*.less"
  ],
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "src/**/*.less": [
      "stylelint --syntax less --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@storybook/addon-docs": "^9.1.4",
    "@storybook/addon-onboarding": "^9.1.4",
    "@storybook/react-vite": "^9.1.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/semver": "^7.7.0",
    "@types/testing-library__react": "^10.2.0",
    "@umijs/fabric": "^4.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chalk": "^5.6.0",
    "commitizen": "^4.3.1",
    "conventional-changelog": "^7.1.1",
    "cpr": "^3.0.1",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dumi": "^2.4.21",
    "eslint-plugin-storybook": "^9.1.4",
    "gh-pages": "^6.3.0",
    "gulp": "^5.0.1",
    "gulp-autoprefixer": "^9.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-less": "^5.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^12.9.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "playwright": "^1.54.2",
    "plop": "^4.0.1",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "serve": "^14.2.4",
    "storybook": "^9.1.4",
    "through2": "^4.0.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.3",
    "classnames": "^2.5.1",
    "prop-types": "^15.8.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
