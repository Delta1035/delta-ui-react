{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src",
        "typings.d.ts",
        "**/*.stories.@(js|jsx|ts|tsx)",
    ],
    "exclude": [
        "node_modules",
        "src/**/demo",
        "src/**/__tests__"
    ],
}